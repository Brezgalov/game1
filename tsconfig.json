{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "./src",
        "rootDir": "src",
        "module": "CommonJS",
        "lib": ["es5", "es6", "dom"],
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "isolatedModules": false,
        "strict": false,
        "noImplicitAny": false,
        "typeRoots" : [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}
